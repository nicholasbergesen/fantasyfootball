@model IEnumerable<Data.Models.Team>

@{
    ViewBag.Title = "ManageTeams";
}

<h2>ManageTeams</h2>

<p>
    @Html.Partial("_AddTeam", new Data.Models.Team())
</p>
<table>
    <tr>
        <th>
            Team
        </th>
        <th>
            League
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @item.League.LeagueName
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
