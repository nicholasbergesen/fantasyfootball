@model Data.Models.EuroFixture

@{
    ViewBag.Title = "Edit";
}

<h2>Post Scores</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Fixture</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomeScore)
            @Html.ValidationMessageFor(model => model.HomeScore)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AwayTeam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AwayScore)
            @Html.ValidationMessageFor(model => model.AwayScore)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
