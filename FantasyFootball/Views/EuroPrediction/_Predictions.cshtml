@model IEnumerable<Data.Models.EuroPrediction>
<table style="padding:10px;">
    <tr>
        <th>
            Date Posted
        </th>
        <th>
            Username
        </th>
        <th>
            Home
        </th>
        <th>
            Away
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePrediction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AwayPrediction)
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Back To Fixture List", "Index", "EuroFixture")
</p>